    -Wcompat
    -threaded

  other-modules:
    Tests.ClockControlWb
    Tests.OverflowResistantDiff
    Wishbone.Axi
    Wishbone.CaptureUgn
    Wishbone.DnaPortE2
    Wishbone.Time

  build-depends:
    HUnit,
    bittide-instances,
    clash-prelude-hedgehog >=1.6 && <1.10,
    filepath,
    hedgehog >=1.0 && <1.5,
    parsec,
    pretty-simple,
    tasty,
    tasty-golden,
    tasty-hedgehog >=1.2 && <1.5,
    tasty-th,

