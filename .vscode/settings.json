{
  "files.exclude": {
    "**/*.dyn_hi": true,
    "**/*.dyn_o": true,
    "**/*.hi": true,
    "**/*.o": true,
    "**/*.o-boot": true,
    "**/*.hi-boot": true,
    "**/dist-newstyle": true,
    "**/.stack-work": true,
    "**/.ghc.environment.*": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.rulers": [
    80,
    90
  ],
  "editor.tabSize": 2,
  "[rust]": {
    "editor.tabSize": 4
  },
  "haskell.manageHLS": "PATH",
  "haskell.plugin.hlint.codeActionsOn": false,
  "haskell.plugin.hlint.diagnosticsOn": false,
  "[haskell]": {
    "editor.formatOnSave": false
  },
  "yaml.schemas": {
    ".vscode/schemas/hitl-test-schema.json": [
      "_build/hitl/*.yml",
      "bittide-instances/data/test_configs/*.yml"
    ]
  },
  "rust-analyzer.linkedProjects": [
    "firmware-support/Cargo.toml",
    "firmware-binaries/Cargo.toml"
  ],
  "rust-analyzer.check.allTargets": false,
  "cSpell.words": [
    "backpressure",
    "Bitbone",
    "bitstream",
    "bittide",
    "combinationally",
    "datapath",
    "deassert",
    "deasserted",
    "deassertion",
    "deasserts",
    "dflipflop",
    "jtag",
    "Underflows",
    "Vivado"
  ],
  "haskell.sessionLoading": "multipleComponents"
}
