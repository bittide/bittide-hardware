{
  "files.exclude": {
    "**/*.dyn_hi": true,
    "**/*.dyn_o": true,
    "**/*.hi": true,
    "**/*.o": true,
    "**/*.o-boot": true,
    "**/*.hi-boot": true,
    "**/dist-newstyle": true,
    "**/.stack-work": true,
    "**/.ghc.environment.*": true,
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.rulers": [
    80,
    90
  ],
  "editor.tabSize": 2,
  "[rust]": {
    "editor.tabSize": 4
  },
  "haskell.toolchain": {
    "hls": "1.8.0.0",
    "ghc": null,
    "cabal": null,
    "stack": null
  },
  "[haskell]": {
    "editor.formatOnSave": false
  },
  "rust-analyzer.linkedProjects": [
    "firmware-support/Cargo.toml",
    "firmware-binaries/Cargo.toml",
    "host-tools/Cargo.toml"
  ],
  "rust-analyzer.check.allTargets": false,
  "cSpell.words": [
    "bitstream",
    "Vivado"
  ]
}
